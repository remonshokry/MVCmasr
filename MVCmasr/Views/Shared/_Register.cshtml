<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="icon" href="~/favicon.ico">
    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="~/Layout/style.css">
</head>
<body>

    <style>
        .custom-nav-container
        {
            width: 100%;
            max-height: 75px;
            background: rgb(0,12,36);
            background: linear-gradient(90deg, rgba(0,12,36,1) 0%, rgba(9,19,121,0.8323529240797882) 57%, rgba(18,20,128,1) 100%); 
            position: absolute;
            top: 0;
            left: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 10px !important;
            border-bottom-color: red !important;
        }

        .custom-nav
        {
            width: 80%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 10rem 0 1rem;
        }

        .custom-nav h2
        {
            color: lightgrey;
            padding-top: 0.25rem;
            min-width: 200px;
        }

        .custom-nav-links
        {
            display: flex;
            column-gap: 1.7rem;
        }

        .custom-nav-links a
        {
            font-size: 1.2rem;
            color: lightgrey;
        }
    </style>

    <div>
        <div class="custom-nav-container p-0 m-0">
        <div class="custom-nav">
            <div>
                <h2>One Sound</h2>
            </div>
            <div class="custom-nav-links">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a asp-area="" asp-controller="Album" asp-action="Index">Albums</a>
            </div>
        </div>
        </div>
        <div>
            @RenderBody()
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
